{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TUI (Bun)",
      "type": "bun",
      "request": "launch",
      "program": "${workspaceFolder}/src/adapters/cli/tui.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false,
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal",
    },
    {
      "name": "Debug TUI (Node + tsx)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["${workspaceFolder}/src/adapters/cli/tui.ts"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**",
      ],
    },
    {
      "name": "Debug Current File (Bun)",
      "type": "bun",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
    },
  ],
}
